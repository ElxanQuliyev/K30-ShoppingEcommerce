@using P109_ShoppingCommerce.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
            </ul>
            <ul class="navbar-nav mr-5">
                @if (Session["user"] == null)
                {
                    <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })</li>
                }
                else
                {
                    var appUser = Session["user"] as P109_ShoppingCommerce.Models.ApplicationUser;
                    <li class="nav-item">
                        <div class="dropdown">

                            @{ 
                                var basket = Session["basket"] as List<BasketProduct>;
                            }

                            <a class="btn btn-warning dropdown-toggle" style="margin-right: 100px;" href="#" role="button" id="basketToggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="badge badge-primary">@(basket != null && basket.Count > 0 ? basket.Count.ToString() : "")</span>
                                <i class="fas fa-shopping-basket"></i>
                            </a>

                            @{
                                if (basket != null && basket.Count > 0)
                                {
                                    <div style="width: 300px" id="basket" class="dropdown-menu" aria-labelledby="basketToggle">
                                        <ul class="list-group">
                                            @foreach (var item in basket)
                                            {
                                                <li class="list-group-item">
                                                    <div class="row">
                                                        <div class="col-3">
                                                            <img width="100%" class="rounded" src="~/Images/@item.Product.Image" />
                                                        </div>
                                                        <div class="col-6">
                                                            <p>@item.Product.ProductName</p>
                                                        </div>
                                                        <div class="col-3">
                                                            <p>@item.Product.Price</p>
                                                        </div>
                                                    </div>
                                                </li>
                                            }
                                            <li class="list-group-item">
                                                <a class="btn btn-primary btn-block btn-lg" href="/Orders/Checkout">
                                                    Checkout
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            }


                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @appUser.Username
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="/Account/Profile">Profile</a>
                                <a class="dropdown-item" href="/Account/Logout">Logout</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
        <div class="row py-3">
            <aside class="col-md-2">
                @RenderSection("left_aside", false)
            </aside>
            <main class="col-md-8">
                @RenderBody()
            </main>
            <aside class="col-md-2">
                @RenderSection("right_aside", false)
            </aside>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
